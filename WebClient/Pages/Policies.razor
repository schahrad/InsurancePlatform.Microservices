@page "/policies"
@using WebClient.ViewModels

<PageTitle>My Policies</PageTitle>

<h3>My Policies</h3>

@if (policies is null)
{
    <p>Loading policies...</p>
}
else if (policies.Count == 0)
{
    <p>No policies found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Policy No.</th>
                <th>Product</th>
                <th>Status</th>
                <th>Premium (€/month)</th>
                <th>Valid From</th>
                <th>Valid To</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in policies)
            {
                <tr>
                    <td>@p.PolicyNumber</td>
                    <td>@p.ProductName</td>
                    <td>@p.Status</td>
                    <td>@p.Premium.ToString("0.00")</td>
                    <td>@p.ValidFrom.ToShortDateString()</td>
                    <td>@p.ValidTo.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

